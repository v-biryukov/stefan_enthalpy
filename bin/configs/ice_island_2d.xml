<?xml version="1.0" encoding="UTF-8" ?>
<Settings dimsCount = "2">
	<Mesh meshFile="meshes/ice_island2d.tmesh">
		<MediumParams>
			<!-- Ground -->
			<Submesh index="0" TPhase = "1000.0" densityL = "2000.0" densityS = "2000.0" thermalConductivityL = "1.1" thermalConductivityS = "1.1" 
				specificHeatFusion = "1e9" specificHeatCapacityL = "1480.0" specificHeatCapacityS = "1480.0" />
			<!-- Water -->	
			<Submesh index="1" TPhase = "273.0" densityL = "1000.0" densityS = "920.0" thermalConductivityL = "0.591" thermalConductivityS = "2.22" 
				specificHeatFusion = "334000.0" specificHeatCapacityL = "4200.0" specificHeatCapacityS = "1100.0" /> 
			<!-- Ice -->
			<Submesh index="1" TPhase = "273.0" densityL = "1000.0" densityS = "920.0" thermalConductivityL = "0.591" thermalConductivityS = "2.22" 
				specificHeatFusion = "334000.0" specificHeatCapacityL = "4200.0" specificHeatCapacityS = "1100.0" />
			<!-- Air -->
			<Submesh index="3" TPhase = "50.0" densityL = "1.3" densityS = "1.3" thermalConductivityL = "0.0243" thermalConductivityS = "0.0243" 
				specificHeatFusion = "1e9" specificHeatCapacityL = "1005.0" specificHeatCapacityS = "1005.0"/> 
		</MediumParams>


		<Boundaries>
			<FixedFlux axis = "x" side = "0" flux = "1.0"/>
			<FixedTemperature axis = "y" side = "0" temperature = "0"/>
		</Boundaries>

		<Fields>
			<FixedTemperature fieldFile="meshes/ice_island2d_water.tfield" temperature = "2000"/>
		</Fields>
	</Mesh>

	<Snapshot>
		<Period frames="50"/>
		<Data fileName = "out/snapshot_iceisland<step>.vtk" stride="1 1" writeEnthalpy="true" writeTemperature="true" writeThermalElasticity="true" 
			writeState="true"/>
	</Snapshot>

	<Task numberOfSteps = "10001" timeStep = "100">
		<IniState> 
			<!-- <PerNode fileName = "meshes/example.temperature.data"/>> -->
			<PerSubmesh>
				<Submesh index="0" temperature="270"/>
				<Submesh index="1" temperature="275"/>
				<Submesh index="2" temperature="272"/>
				<Submesh index="3" temperature="280"/>
			</PerSubmesh>
		</IniState>
	</Task>
</Settings>
